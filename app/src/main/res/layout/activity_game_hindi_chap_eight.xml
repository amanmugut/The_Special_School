<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameHindiChapEight"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer The Following Questions "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_20sdp"
        android:background="@color/bluelight"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. सर सर सर उदी "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:id="@+id/fillA"
            android:background="@color/bluelight"
            android:textColor="@color/green"
            android:padding="@dimen/_5sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. अरे "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:background="@color/bluelight"
            android:textColor="@color/green"
            android:id="@+id/fillB"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" गई "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:background="@color/bluelight"
            android:textColor="@color/green"
            android:id="@+id/fillC"

            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" पतंग "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. खूब लगाया सर "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:background="@color/bluelight"
            android:textColor="@color/green"
            android:id="@+id/fillD"

            android:padding="@dimen/_5sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/fillE"

            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:background="@color/bluelight"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/green"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:background="@color/bluelight"
            android:textColor="@color/green"
            android:id="@+id/fillF"

            android:padding="@dimen/_5sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" खूब लगाया सर "
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/optC"
                android:layout_height="wrap_content"
                android:text=" फर "
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:background="@color/bluelight"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/green"
                android:padding="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" कट "
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:background="@color/bluelight"
                android:textColor="@color/green"
                android:id="@+id/OptD"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/optA"
                android:layout_height="wrap_content"
                android:text=" सपाता "
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:background="@color/bluelight"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/green"
                android:padding="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" फर "
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:background="@color/bluelight"
                android:textColor="@color/green"
                android:id="@+id/OptB"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/optE"
                android:layout_height="wrap_content"
                android:text=" लूटी "
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:background="@color/bluelight"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/green"
                android:padding="@dimen/_5sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" पतंग "
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:background="@color/bluelight"
                android:textColor="@color/green"
                android:id="@+id/OptF"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>